.macro subject_head <TD VALIGN=TOP NOWRAP>

.macro subject_text -
.if "$(PAGE)" eq "$1" -
    <IMG SRC="sunken.gif" NAME="$1" ALT="$+" -
     WIDTH=36 HEIGHT=45 BORDER=0 ALIGN="MIDDLE"> -
    &nbsp;<FONT COLOR="#FFFF99" FACE="ARIAL">$+</FONT><BR> -
.else -
    <A HREF="$1" -
     onMouseOver="show('$1','raiseda.gif')" -
     onMouseOut="show('$1','raised.gif')" -
     TITLE="$+"> -
        <IMG SRC="raised.gif" NAME="$1" ALT="$+" -
         WIDTH=36 HEIGHT=45 BORDER=0 ALIGN="MIDDLE"></A> -
    &nbsp;<FONT COLOR="#80FFFF" FACE="ARIAL">$+</FONT><BR> -
.endif

